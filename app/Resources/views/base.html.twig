<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {% stylesheets filter='less,?yui_css' output='css/base.css'
            '../app/Resources/public/css/base.less' %}
        <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
        {% endstylesheets %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <!-- IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        <title>{% block title %}Welcome!{% endblock %}</title>
    </head>
    <body>
        {% block header %}{% endblock %}
        {% block content %}{% endblock %}
        {% block footer %}{% endblock %}
        {% block javascripts %}
            {% javascripts filter='?yui_js' output='js/scripts.js'
                '@CadavreAssetsBundle/Resources/public/js/jquery-1.8.1.min.js'
                '@CadavreAssetsBundle/Resources/public/js/symfony-behaviors.js' %}
            <script src="{{ asset_url }}" type="text/javascript"></script>
            {% endjavascripts %}
        {% endblock %}
        </body>
    </html>
